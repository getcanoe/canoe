<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="391001" id="io.getcanoe.canoe" ios-CFBundleVersion="0.3.4" version="0.3.4">
    <name>Canoe</name>
    <description>
      Canoe Nano Wallet
    </description>
    <author email="goran.krampe@gmail.com" href="https://getcanoe.io">
        GÃ¶ran Krampe
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <preference name="iosPersistentFileLocation" value="Library" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="HideKeyboardFormAccessoryBar" value="true" />
    <preference name="WindowsStoreIdentityName" value="------" />
    <preference name="WindowsStoreDisplayName" value="Canoe - Secure Nano Wallet" />
    <preference name="StatusBarBackgroundColor" value="#261454" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="windows-target-version" value="10.0" />
    <preference name="Orientation" value="default" />
    <preference name="cordova-custom-config-stoponerror" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="200" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="android-minSdkVersion" value="19" />
    <platform name="ios">
        <config-file parent="UIStatusBarHidden" platform="ios" target="*-Info.plist">
            <true />
        </config-file>
        <config-file parent="UIViewControllerBasedStatusBarAppearance" platform="ios" target="*-Info.plist">
            <false />
        </config-file>
        <config-file parent="ITSAppUsesNonExemptEncryption" target="*-Info.plist">
            <false />
        </config-file>
        <allow-navigation href="*" />
    </platform>
    <platform name="android">
        <preference name="android-manifest/application/@android:allowBackup" value="false" />
        <icon density="ldpi" src="resources/canoe/android/icon/drawable-ldpi-icon.png" />
        <icon density="mdpi" src="resources/canoe/android/icon/drawable-mdpi-icon.png" />
        <icon density="hdpi" src="resources/canoe/android/icon/drawable-hdpi-icon.png" />
        <icon density="xhdpi" src="resources/canoe/android/icon/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi" src="resources/canoe/android/icon/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="resources/canoe/android/icon/drawable-xxxhdpi-icon.png" />
    </platform>
    <platform name="windows">
        <icon src="resources/canoe/windows/icon/StoreLogo.png" target="StoreLogo" />
        <icon src="resources/canoe/windows/icon/Square30x30Logo.png" target="Square30x30Logo" />
        <icon src="resources/canoe/windows/icon/Square44x44Logo.png" target="Square44x44Logo" />
        <icon src="resources/canoe/windows/icon/Square70x70Logo.png" target="Square70x70Logo" />
        <icon src="resources/canoe/windows/icon/Square71x71Logo.png" target="Square71x71Logo" />
        <icon src="resources/canoe/windows/icon/Square150x150Logo.png" target="Square150x150Logo" />
        <icon src="resources/canoe/windows/icon/Square310x310Logo.png" target="Square310x310Logo" />
        <icon src="resources/canoe/windows/icon/Wide310x150Logo.png" target="Wide310x150Logo" />
        <splash height="300" src="resources/canoe/windows/splash/SplashScreen.scale-100.png" width="620" />
        <splash height="1920" src="resources/canoe/windows/splash/SplashScreenPhone.scale-240.png" width="1152" />
    </platform>
    <engine name="android" spec="7.1.0" />
    <engine name="windows" spec="6.0.0" />
    <engine name="ios" spec="^4.5.4" />
    <plugin name="cordova-plugin-device" spec="^2.0.1" />
    <plugin name="cordova-plugin-globalization" spec="^1.0.9" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="^2.0.2" />
    <plugin name="cordova-plugin-x-toast" spec="^2.6.2" />
    <plugin name="cordova-clipboard" spec="^1.1.1" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.3.2" />
    <plugin name="cordova-plugin-spinner-dialog" spec="^1.3.1" />
    <plugin name="cordova-plugin-dialogs" spec="^2.0.1" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-plugin-uniquedeviceid" spec="^1.3.2" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-touch-id" spec="^3.3.1">
        <variable name="FACEID_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-transport-security" spec="^0.1.2" />
    <plugin name="cordova-ios-requires-fullscreen" spec="0.0.2" />
    <plugin name="cordova-plugin-android-fingerprint-auth" spec="^1.4.3" />
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.1" />
    <plugin name="ionic-plugin-keyboard" spec="^2.2.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-qrscanner" spec="git+https://github.com/gokr/cordova-plugin-qrscanner.git" />
    <plugin name="cordova-plugin-customurlscheme" spec="^4.3.0">
        <variable name="URL_SCHEME" value="nano" />
        <variable name="SECOND_URL_SCHEME" value="xrb" />
        <variable name="THIRD_URL_SCHEME" value="canoe" />
    </plugin>
    <plugin name="cordova-plugin-ionic-webview" spec="^1.1.16" />
    <plugin name="cordova-custom-config" spec="^5.0.2" />
    <plugin name="cordova-plugin-media" spec="^5.0.2">
        <variable name="KEEP_AVAUDIOSESSION_ALWAYS_ACTIVE" value="NO" />
    </plugin>
    <plugin name="cordova-plugin-add-swift-support" spec="^1.7.1" />
</widget>
